{
  "java.configuration.updateBuildConfiguration": "automatic",
  // "java.debug.settings.vmArgs": "-XstartOnFirstThread",
  "java.debug.settings.onBuildFailureProceed": true,
  "cSpell.words": [
    "glfw",
    "hackoeur",
    "jglm",
    "joml",
    "learnopengl",
    "lwjgl",
    "OPENGL",
    "Parameteri",
    "Programi",
    "rawtypes",
    "Shaderi",
    "stbi",
    "Storei",
    "xoffset",
    "yoffset"
  ],
  "java.compile.nullAnalysis.mode": "automatic",
  "emeraldwalk.runonsave": {
    "commands": [
      {
        // Run whenever any file is saved
        "match": "\\.java$",
        "message": "Start",
        "cmd": "\"google-java-format/google-java-format_windows-x86-64.exe\" -i \"${file}\""
      }
    ]
  }
}
